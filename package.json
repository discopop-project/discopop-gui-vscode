{
    "name": "discopop-gui",
    "displayName": "discopop-gui",
    "description": "An extension for the Parallelism Discovery tool DiscoPoP.",
    "author": "Emir Azazi",
    "version": "1.0.2",
    "publisher": "easoqi",
    "repository": {
        "type": "git",
        "url": "https://github.com/emirazazi/discopop-gui-vscode"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:discopop-sidebar-view"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "discopop-sidebar-view",
                    "title": "DiscoPoP",
                    "icon": "media/discopop_icon.png"
                }
            ]
        },
        "views": {
            "discopop-sidebar-view": [
                {
                    "type": "tree",
                    "id": "sidebar-projects-view",
                    "name": "Projects"
                },
                {
                    "type": "webview",
                    "id": "detail-view",
                    "name": "RECOMMENDATION DETAIL"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "sidebar-projects-view",
                "contents": "No projects configured. Please add a project to get started.\n[Add Project](command:discopop.createProject)"
            }
        ],
        "configuration": {
            "title": "DiscoPoP",
            "properties": {
                "discopop.discopopRoot": {
                    "type": "string",
                    "default": "",
                    "description": "The path to your DiscoPoP installation. Please be sure the build and scripts folders exist. For more information regarding DiscoPoP please visit the [docs](https://github.com/discopop-project/discopop)."
                },
                "discopop.clang": {
                    "type": "string",
                    "default": "",
                    "description": "The path to clang."
                },
                "discopop.clangPP": {
                    "type": "string",
                    "default": "",
                    "description": "The path to clang++."
                },
                "discopop.recommendationsCodeLens": {
                    "type": "boolean",
                    "default": false
                },
                "discopop.scriptModeEnabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "If this option is enabled, the extension expects the results of the DiscoPoP execution in your project to be in a .discopop folder"
                },
                "discopop.cwdWorkspace": {
                    "type": "boolean",
                    "default": false,
                    "description": "If enabled .discopop inside the workspace will be the working directory"
                }
            }
        },
        "commands": [
            {
                "title": "Add Project",
                "command": "discopop.createProject",
                "category": "DiscoPoP",
                "icon": "$(new-folder)"
            },
            {
                "title": "Remove Project",
                "command": "discopop.removeProject",
                "category": "DiscoPoP",
                "icon": "$(trashcan)"
            },
            {
                "title": "Rename Project",
                "command": "discopop.renameProject",
                "category": "DiscoPoP",
                "icon": "$(edit)"
            },
            {
                "title": "Add Configuration",
                "command": "discopop.addConfiguration",
                "category": "DiscoPoP",
                "icon": "$(add)"
            },
            {
                "title": "Remove Configuration",
                "command": "discopop.removeConfiguration",
                "category": "DiscoPoP",
                "icon": "$(trashcan)"
            },
            {
                "title": "Copy Configuration",
                "command": "discopop.copyConfiguration",
                "category": "DiscoPoP",
                "icon": "$(copy)"
            },
            {
                "title": "Rename Configuration",
                "command": "discopop.renameConfiguration",
                "category": "DiscoPoP",
                "icon": "$(edit)"
            },
            {
                "title": "Run Configuration",
                "command": "discopop.runConfiguration",
                "category": "DiscoPoP",
                "icon": "$(play)"
            },
            {
                "title": "Edit Configuration Item",
                "command": "discopop.editConfigurationItem",
                "category": "DiscoPoP",
                "icon": "$(edit)"
            },
            {
                "title": "Run File Mapping",
                "command": "discopop.refreshFileMapping",
                "category": "DiscoPoP"
            },
            {
                "title": "Generate Computational Units",
                "command": "discopop.executeCUGen",
                "category": "DiscoPoP"
            },
            {
                "title": "Profile Data Dependencies",
                "command": "discopop.executeDepProf",
                "category": "DiscoPoP"
            },
            {
                "title": "Detect Reduction Patterns",
                "command": "discopop.executeRedOp",
                "category": "DiscoPoP"
            },
            {
                "title": "Identify Parallel Patterns",
                "command": "discopop.executePatternId",
                "category": "DiscoPoP"
            },
            {
                "title": "Execute All Tasks",
                "command": "discopop.executeAll",
                "category": "DiscoPoP"
            },
            {
                "title": "Execute All Tasks (NEW)",
                "command": "discopop.executeAllNew",
                "category": "DiscoPoP"
            },
            {
                "title": "Apply Results to TreeView",
                "command": "discopop.applyResultsToTreeView",
                "category": "DiscoPoP"
            },
            {
                "command": "discopop.toggleEntry",
                "title": "Toggle File",
                "icon": {
                    "light": "media/toggle.svg",
                    "dark": "media/toggle.svg"
                }
            },
            {
                "command": "discopop.toggleFolder",
                "title": "Toggle Folder",
                "icon": {
                    "light": "media/toggle.svg",
                    "dark": "media/toggle.svg"
                }
            },
            {
                "title": "Enable Recommendations CodeLens",
                "command": "discopop.enableCodeLens",
                "category": "DiscoPoP"
            },
            {
                "title": "Disable Recommendations CodeLens",
                "command": "discopop.disableCodeLens",
                "category": "DiscoPoP"
            },
            {
                "title": "Execute By Script",
                "command": "discopop.executeByScript",
                "category": "DiscoPoP"
            },
            {
                "title": "Parse Results",
                "command": "discopop.parseResults",
                "category": "DiscoPoP"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "discopop.createProject",
                    "when": "view == sidebar-projects-view",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "discopop.removeProject",
                    "when": "view == sidebar-projects-view && viewItem==project",
                    "group": "inline"
                },
                {
                    "command": "discopop.renameProject",
                    "when": "view == sidebar-projects-view && viewItem==project",
                    "group": "inline"
                },
                {
                    "command": "discopop.addConfiguration",
                    "when": "view == sidebar-projects-view && viewItem==project",
                    "group": "inline"
                },
                {
                    "command": "discopop.removeConfiguration",
                    "when": "view == sidebar-projects-view && viewItem==configuration",
                    "group": "inline@1"
                },
                {
                    "command": "discopop.copyConfiguration",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "inline@3"
                },
                {
                    "command": "discopop.renameConfiguration",
                    "when": "view == sidebar-projects-view && viewItem==configuration",
                    "group": "inline@2"
                },
                {
                    "command": "discopop.runConfiguration",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "inline@4"
                },
                {
                    "command": "discopop.editConfigurationItem",
                    "when": "view == sidebar-projects-view && viewItem==configurationItem",
                    "group": "inline@0"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint && npm run prettier",
        "prettier": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint src --ext ts",
        "test": "echo \"there are no tests. (node ./out/test/runTest.js)\"",
        "prepare": "husky install",
        "commitlint": "commitlint --edit"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^9.0.0",
        "glob": "^8.0.3",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "mocha": "^10.0.0",
        "prettier": "2.7.1",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.33",
        "bson": "^4.6.5",
        "mkdirp": "^1.0.4"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{ts,js,css,md}": "prettier --write"
    }
}
