{
    "name": "discopop",
    "displayName": "DiscoPoP",
    "description": "An extension for the Parallelism Discovery tool DiscoPoP.",
    "author": "TU Darmstadt - Laboratory for Parallel Programming",
    "icon": "media/discopop_icon.png",
    "version": "0.0.3",
    "publisher": "TUDarmstadt-LaboratoryforParallelProgramming",
    "repository": {
        "type": "git",
        "url": "https://github.com/discopop-project/discopop-gui-vscode"
    },
    "engines": {
        "vscode": "^1.68.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:discopop-sidebar-view"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "discopop-sidebar-view",
                    "title": "DiscoPoP",
                    "icon": "media/discopop_icon.png"
                }
            ]
        },
        "views": {
            "discopop-sidebar-view": [
                {
                    "type": "tree",
                    "id": "sidebar-projects-view",
                    "name": "PROJECTS"
                },
                {
                    "type:": "tree",
                    "id": "sidebar-suggestions-view",
                    "name": "SUGGESTIONS"
                },
                {
                    "type:": "tree",
                    "id": "sidebar-hotspots-view",
                    "name": "HOTSPOTS"
                },
                {
                    "type": "webview",
                    "id": "sidebar-suggestion-detail-view",
                    "name": "SUGGESTION DETAILS"
                },
                {
                    "type": "webview",
                    "id": "sidebar-hotspot-detail-view",
                    "name": "HOTSPOT DETAILS"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "sidebar-projects-view",
                "contents": "No projects configured. Please add a project to get started.\n[Add Project](command:discopop.addProject)"
            },
            {
                "view": "sidebar-suggestions-view",
                "contents": "No suggestions available. Please run a project configuration to get started."
            },
            {
                "view": "sidebar-hotspots-view",
                "contents": "No hotspots available. Please run a project configuration to get started."
            }
        ],
        "configuration": {
            "title": "DiscoPoP",
            "properties": {
                "discopop.discopopRoot": {
                    "type": "string",
                    "default": "",
                    "description": "The path to your DiscoPoP installation. Please be sure the build and scripts folders exist. For more information regarding DiscoPoP please visit the [docs](https://github.com/discopop-project/discopop)."
                },
                "discopop.hotspotDetectionRoot": {
                    "type": "string",
                    "default": "",
                    "description": "The path to your HotspotDetection installation. Please be sure the build and scripts folders exist. For more information regarding HotspotDetection please visit the [docs](https://github.com/discopop-project/Hotspot-Detection)." 
                },
                "discopop.recommendationsCodeLens": {
                    "type": "boolean",
                    "default": false
                },
                "discopop.skipOverwriteConfirmation": {
                    "type": "boolean",
                    "default": false
                }
            }
        },
        "commands": [
            {
                "title": "Add Project",
                "command": "discopop.addProject",
                "category": "DiscoPoP",
                "icon": "$(new-folder)"
            },
            {
                "title": "Delete Project",
                "command": "discopop.removeProject",
                "category": "DiscoPoP",
                "icon": "$(trashcan)"
            },
            {
                "title": "Rename Project",
                "command": "discopop.renameProject",
                "category": "DiscoPoP",
                "icon": "$(edit)"
            },
            {
                "title": "Add Configuration",
                "command": "discopop.addConfiguration",
                "category": "DiscoPoP",
                "icon": "$(add)"
            },
            {
                "title": "Delete Configuration",
                "command": "discopop.removeConfiguration",
                "category": "DiscoPoP",
                "icon": "$(trashcan)"
            },
            {
                "title": "Rename Configuration",
                "command": "discopop.renameConfiguration",
                "category": "DiscoPoP",
                "icon": "$(edit)"
            },
            {
                "title": "Copy Configuration",
                "command": "discopop.copyConfiguration",
                "category": "DiscoPoP",
                "icon": "$(copy)"
            },
            {
                "title": "Edit Configuration Item",
                "command": "discopop.editConfigurationItem",
                "category": "DiscoPoP",
                "icon": "$(edit)"
            },
            {
                "title": "Run DiscoPoP and Hotspot Detection",
                "command": "discopop.runDiscoPoPAndHotspotDetection",
                "category": "DiscoPoP",
                "icon": "$(run-all)"
            },
            {
                "title": "Run DiscoPoP",
                "command": "discopop.runDiscoPoP",
                "icon": "$(play)"
            },
            {
                "title": "Run Hotspot Detection",
                "command": "discopop.runHotspotDetection",
                "icon": "$(play-circle)"
            },
            {
                "title": "Load DiscoPoP Results",
                "command": "discopop.loadDiscoPoPResults",
                "icon": "$(history)"
            },
            {
                "title": "Load Hotspot Detection Results",
                "command": "discopop.loadHotspotResults",
                "icon": "$(history)"
            },
            {
                "title": "Enable Recommendations CodeLens",
                "command": "discopop.enableCodeLens",
                "category": "DiscoPoP",
                "enablement": "false",
                "icon": "$(eye)"
            },
            {
                "title": "Disable Recommendations CodeLens",
                "command": "discopop.disableCodeLens",
                "category": "DiscoPoP",
                "enablement": "false",
                "icon": "$(eye-closed)"
            },
            {
                "title": "Apply Suggestion",
                "command": "discopop.applySingleSuggestion",
                "category": "DiscoPoP",
                "icon": "$(check)"
            },
            {
                "title": "Rollback Suggestion",
                "command": "discopop.rollbackSingleSuggestion",
                "category": "DiscoPoP",
                "icon": "$(close)"
            },
            {
                "title": "Apply Multiple Suggestions",
                "command": "discopop.applySuggestions",
                "category": "DiscoPoP",
                "icon": "$(check)"
            },
            {
                "title": "Rollback Multiple Suggestions",
                "command": "discopop.rollbackSuggestions",
                "category": "DiscoPoP",
                "icon": "$(close)"
            },
            {
                "title": "Rollback All Suggestions",
                "command": "discopop.rollbackAllSuggestions",
                "category": "DiscoPoP",
                "icon": "$(clear-all)"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "discopop.renameProject",
                    "when": "false"
                },
                {
                    "command": "discopop.removeProject",
                    "when": "false"
                },
                {
                    "command": "discopop.addConfiguration",
                    "when": "false"
                },
                {
                    "command": "discopop.renameConfiguration",
                    "when": "false"
                },
                {
                    "command": "discopop.copyConfiguration",
                    "when": "false"
                },
                {
                    "command": "discopop.removeConfiguration",
                    "when": "false"
                },
                {
                    "command": "discopop.editConfigurationItem",
                    "when": "false"
                },
                {
                    "command": "discopop.runDiscoPoPAndHotspotDetection",
                    "when": "false"
                },
                {
                    "command": "discopop.runDiscoPoP",
                    "when": "false"
                },
                {
                    "command": "discopop.runHotspotDetection",
                    "when": "false"
                },
                {
                    "command": "discopop.loadDiscoPoPResults",
                    "when": "false"
                },
                {
                    "command": "discopop.loadHotspotResults",
                    "when": "false"
                },
                {
                    "command": "discopop.applySingleSuggestion",
                    "when": "false"
                },
                {
                    "command": "discopop.rollbackSingleSuggestion",
                    "when": "false"
                },
                {
                    "command": "discopop.rollbackAllSuggestions",
                    "when": "false"
                }
            ],
            "view/title": [
                {
                    "command": "discopop.addProject",
                    "when": "view == sidebar-projects-view",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "discopop.applySingleSuggestion",
                    "when": "view == sidebar-suggestions-view && viewItem==suggestion",
                    "group": "inline",
                    "icon": "$(check)"
                },
                {
                    "command": "discopop.rollbackSingleSuggestion",
                    "when": "view == sidebar-suggestions-view && viewItem==suggestion_applied",
                    "group": "inline",
                    "icon": "$(close)"
                },
                {
                    "command": "discopop.removeProject",
                    "when": "view == sidebar-projects-view && viewItem==project",
                    "group": "context"
                },
                {
                    "command": "discopop.renameProject",
                    "when": "view == sidebar-projects-view && viewItem==project",
                    "group": "context"
                },
                {
                    "command": "discopop.addConfiguration",
                    "when": "view == sidebar-projects-view && viewItem==project",
                    "group": "inline"
                },
                {
                    "command": "discopop.removeConfiguration",
                    "when": "view == sidebar-projects-view && viewItem==configuration",
                    "group": "context"
                },
                {
                    "command": "discopop.copyConfiguration",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "context"
                },
                {
                    "command": "discopop.renameConfiguration",
                    "when": "view == sidebar-projects-view && viewItem==configuration",
                    "group": "context"
                },
                {
                    "command": "discopop.editConfigurationItem",
                    "when": "view == sidebar-projects-view && viewItem==configurationItem",
                    "group": "inline"
                },
                {
                    "command": "discopop.runDiscoPoPAndHotspotDetection",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "inline@4"
                },
                {
                    "command": "discopop.runDiscoPoP",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "inline@3"
                },
                {
                    "command": "discopop.runHotspotDetection",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "inline@2"
                },
                {
                    "command": "discopop.loadDiscoPoPResults",
                    "when": "view==sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "inline@1"
                },
                {
                    "command": "discopop.loadHotspotResults",
                    "when": "view == sidebar-projects-view && (viewItem==configuration||viewItem==defaultConfiguration)",
                    "group": "inline@0"
                },
                {
                    "command": "discopop.runDiscoPoPAndHotspotDetection",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "runners"
                },
                {
                    "command": "discopop.runDiscoPoP",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "runners"
                },
                {
                    "command": "discopop.runHotspotDetection",
                    "when": "view == sidebar-projects-view && (viewItem==configuration || viewItem==defaultConfiguration)",
                    "group": "runners"
                },
                {
                    "command": "discopop.loadDiscoPoPResults",
                    "when": "view == sidebar-projects-view && (viewItem==configuration ||viewItem==defaultConfiguration)",
                    "group": "loaders"
                },
                {
                    "command": "discopop.loadHotspotResults",
                    "when": "view == sidebar-projects-view && (viewItem==configuration ||viewItem==defaultConfiguration)",
                    "group": "loaders"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint && npm run prettier",
        "prettier": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint src --ext ts",
        "test": "echo \"there are no tests. (node ./out/test/runTest.js)\"",
        "prepare": "husky install",
        "commitlint": "commitlint --edit"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.7.2",
        "@commitlint/config-conventional": "^17.7.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/vscode": "^1.68.0",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vscode/test-electron": "^2.1.3",
        "eslint": "^8.16.0",
        "eslint-config-prettier": "^9.0.0",
        "glob": "^8.0.3",
        "husky": "^8.0.3",
        "lint-staged": "^14.0.1",
        "mocha": "^10.0.0",
        "prettier": "2.7.1",
        "typescript": "^4.7.2"
    },
    "dependencies": {
        "@vscode/codicons": "^0.0.33",
        "bson": "^4.6.5",
        "mkdirp": "^1.0.4"
    },
    "lint-staged": {
        "*.ts": "eslint --cache --fix",
        "*.{ts,js,css,md}": "prettier --write"
    }
}
